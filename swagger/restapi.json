        "tables": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "status": {
          "type": "string"
        },
        "percent_complete": {
          "type": "number",
          "format": "int32"
        },
        "total": {
          "type": "number",
          "format": "int32"
        },
        "success": {
          "type": "number",
          "format": "int32"
        },
        "error": {
          "type": "number",
          "format": "int32"
        },
        "hosts": {
          "type": "object",
